{{outlet}}
<h1>Добавьте новое видео!</h1>
<!--<div class="form-inline">-->
<div class="form-group">
    {{textarea value=videoSource class="form-control"}}
</div>
<div class="form-group">
    {{ember-selectize
    content=model.categories
    selection=model.category
    optionLabelPath="content.name"
    optionValuePath="content.id"
    placeholder="Категория"}}
</div>
<div class="form-group">
    <button {{action 'add' videoSource}}class="btn btn-primary">Добавить</button>
</div>
