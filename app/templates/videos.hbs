{{outlet}}
<div class="full_hero">
    <div class="video_card_bg video_card_bg_img blur"
         style="background-image: url({{video-image model.videos.firstObject.source}});"></div>
    <div class="video_card_bg video_card_bg_gradient"></div>
    <svg version="1.1" xmlns="http://www.w3.org/2000/svg">
        <filter id="blur">
            <feGaussianBlur stdDeviation="3"/>
        </filter>
    </svg>
    <div class="" style="width: 100%;background-color: rgba(0,0,0,.5);position:relative; padding-top: 20px;    margin-top: 76px;
    display: inline-block;">
        <div class="col-md-4 col-md-offset-1">
            {{video-preview video = model.videos.firstObject}}
        </div>
        <div class="col-md-4">
            <div style="font-size: 25px; color: white; position:relative;">{{link-to 'Категории' 'categories'}}
                / {{model.category.name}}</div>

            <div  style="margin-top: 85px;">
                {{link-to 'Смотреть''video' model.videos.firstObject.id class="btn btn-primary"}}
            </div>
        </div>
    </div>
</div>


<div class="container">
    {{#endless-scrolling-blocks object_type = 'video' param_key = 'category' param_value = model.categoryId}}
        {{#if model.category}}
            <h2>{{link-to 'Категории' 'categories'}} / {{model.category.name}}
                {{#if (can 'add videos')}}
                    {{link-to 'Добавить видео' 'add' (query-params category=model.category.id) class="btn btn-primary"}}
                {{/if}}
            </h2>
        {{/if}}
        {{#each model.videos as |video|}}
            <div class="col-md-3" style="padding-right: 0;">
                {{video-preview video=video}}
            </div>
        {{/each}}

    {{/endless-scrolling-blocks }}
</div>